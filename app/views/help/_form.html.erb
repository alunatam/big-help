<% form_for :ticket, @ticket do |f| %>
  
  <fieldset>
    <legend>Contact Information</legend>
    <p>
      <label for="ticket_name">Your name</label><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="ticket_email">Email</label><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <label for="ticket_phone">Phone</label><br />
      <%= f.text_field :phone %>
    </p>
  </fieldset>
  
  <fieldset>
    <legend>How Can We Help You?</legend>
    <p>
      <label for="ticket_urgent">Is this issue urgent?</label><br />
      <%= f.select :urgent, [["Yes", true], ["No", false]] %>
    </p>
    <p>
      <label for="ticket_custom"><%= AppConfig['custom_label'] %></label><br />
      <%= f.text_field :custom %>
    </p>
    <p>
      <label for="ticket_body">How can we help you?</label><br />
      <%= f.text_area :body %>
    </p>
    
    
  </fieldset>
  <p>When phrasing your question or describing your issue, details help us tremendously. 
      Whenever applicable, please include your operating system, web browser, email client, and steps required to reproduce your problem. 
      Thanks!</p>
    <p><%= submit_tag 'Send' -%></p>
  
<% end %>